      if (mouseX %/% 2 == 0) {
      background(225,mouseY/3,mouseX/3)
        }
     else {
       background(110,mouseX/4,90)
  
  
  
    rectMode(CORNERS)
    rect(mouseX, mouseY, abs(mouseX-mouseY), (mouseX+mouseY)/2.2)
    
  
    }
    
    
}

